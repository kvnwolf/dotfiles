[user]
	name = Kevin Wolf
	email = kevinvillaloboscr@gmail.com

[credential]
	helper = store

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
	autoSetupRemote = true

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	hyperlinks = true
	hyperlinks-file-link-format = "code://file/{path}:{line}"
	line-numbers = true
	navigate = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[include]
	path = ~/.gitconfig-custom

[credential "https://github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
	
[credential "https://gist.github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
